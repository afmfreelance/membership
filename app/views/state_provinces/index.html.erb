<h1>Listing state_provinces</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Abbreviation</th>
    <th>Country</th>
  </tr>

<% @state_provinces.each do |state_province| %>
  <tr>
    <td><%=h state_province.name %></td>
    <td><%=h state_province.abbreviation %></td>
    <td><%=h state_province.country_id %></td>
    <td><%= link_to 'Show', state_province %></td>
    <td><%= link_to 'Edit', edit_state_province_path(state_province) %></td>
    <td><%= link_to 'Destroy', state_province, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New state_province', new_state_province_path %>